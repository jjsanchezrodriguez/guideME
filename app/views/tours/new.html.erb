<div> <%= @tourist.name %> </div>
<div> <%= @guides.name %> </div>

<%= form_for([@tourist, @tour], method: "post") do |f|%>
   <%= binding.pry%>     
    <div class="name-container">
        <%= f.label("Guides") %>
        <%= f.select(:id, @excursions) %> 
    </div>    

    <div class="name-container">
        <%= f.label("Excursions") %>
        <%= f.select(:excursion_id, @excursions) %> 
    </div>

    <div class="language-container">
        <%= f.label("Languaje") %>
        <%= f.text_field(:language) %>
    
    </div>
        
    <div class="date-container">
        <%= f.label("Date") %>
        <%= f.date_field(:date) %>    
    </div>

    <div class="available-container">
        <%= f.label("Availables Places") %>
        <%= f.select(:available, 1..20) %>

    </div>
        
    <%= submit_tag("Create Offer!!!") %>
<% end %>

<%= link_to "Back", @guide%> 

