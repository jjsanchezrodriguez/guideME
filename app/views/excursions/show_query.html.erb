<!-- Para mostrar las excursiones-->
									
<%if user_signed_in? && current_user.role=="guide" %>
	<div class = "caja-exc container-fluid">									
		<div class = "col-sm-12"> 
	        <%= link_to "Nueva Excursion",  new_excursion_path, class: "button" %>
	    </div>
	</div>
<% end %>  

<% @excursions.each do |excursion| %>
<div class = "caja-exc container-fluid">
    <div class = "row enlace-excursion">
    	<div class = "col-sm-6 "> 									
    		<%=link_to "Excursion:" + excursion.name, excursion_path(excursion) %>
    	</div>

    	<div class = "col-sm-6"> 									
    		<%if user_signed_in? && current_user.role=="guide" %>      
               <%= link_to "Editar", edit_excursion_path(excursion), class: "button-font" %>
               <%= link_to "Borrar", excursion_path(excursion), method: :delete, data:{confirm: "¿Estas Seguro?"}, class: "button-font" %>
         	<% end %>  
    	</div>
    </div>

    <div class = "row"> 
    	<div class ="col-sm-2">
    		<div class = "caja-text-exc">
			    Duracion: <%= excursion.duration %> h. 
			    Precio: <%= excursion.price %> €.
			    Fecha: <%= excursion.start %> 
			    Disponible: <%= excursion.available %>  Plazas
			</div>

		    <div class = "row caja-button-exc">
		    	<%if user_signed_in? && current_user.role=="guide" %>	
			       <%= link_to("Ofertar", "/offers/guide/" + excursion.id.to_s, class: "button-exc, button-ofertar")%>
		       	<% else%>
		       		<%= link_to("Reservar", excursion_path(excursion), class: "button-exc, button-reservar")%>
		       	<% end %>
			</div>
		</div>

		<% cont = 0 %>
	    <div class ="col-sm-10">   
	       <% excursion.monuments.each do |monument| %>
		       	<div class = "caja-monument">
			       	<div class = "monument_img"><%=image_tag(monument.image)%></div>
					<div class = "text-monument"> <%=monument.name%> </div>	
				</div>	
				<!-- cont == 4 ? "break" : (cont + 1) -->
				<%cont = cont+1%>
				<% if cont == 4 %>
					<%break%>
				<% end %>	
			<% end %>	
		</div>	
	</div>	

	<div class = "row descrip-exc col-sm-12">
		  Description: <%= excursion.description %> 
	</div>

</div>
<% end %>

<div class = "paginacion">
	<%= paginate @excursions %>
</div>
