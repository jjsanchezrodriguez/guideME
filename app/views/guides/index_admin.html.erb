<div class = "notice">
    <%= display_flash_message%>
</div>

<div class="caja-admin container-fluid">
	<div class="sup-caja-admin container-fluid">Guides</div>
		<% @guides.each do |guide| %>
			<div class = "row row-excursion">
				<div class = "col-sm-2"> </div>
				<div class = "col-sm-3">	
				  	<%= link_to  guide.name, guide_path(guide), class: "text-excursion" %>
				</div>
				<div class = "col-sm-5">  	
			       	<%= link_to "Nuevo", user_registration_path, class: "btn btn-xs button-admin" %>
			       	<%= link_to "Editar", edit_guide_path(guide), class: "btn btn-xs button-admin" %>
			      	<%= link_to "Borrar", guide_path(guide), method: :delete, data:{confirm: "Are you sure?"}, class: "btn btn-xs button-admin" %>
			    </div>    	
	       	</div>
		<% end %>
</div>

<div class = "paginacion">
	<%= paginate @guides %>
</div>