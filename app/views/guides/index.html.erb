<% @guides.each do |guide| %>
  <div class = "caja-guia container-fluid">
    <div class = "row col-sm-12 enlace-guia">                   
       <%= link_to guide.name, edit_user_registration_path %>
    </div>
   
    <div class = "row"> 
      <div class ="col-sm-3">
        <div class = "caja-text-guia">
          <div class = "guia-img"><%=image_tag("guias/guia1.jpg")%></div>
          Guia: <%= guide.name %> <br/>
          Tel√©fono: <%= guide.phone %> <br/>
          correo: <%= guide.phone %> <br/>
        </div> 
      </div> 
      
      <div class ="col-sm-9">      
        <% if !guide.offers.blank? %>
          <% cont1 = 0 %>
          <% guide.offers.each do |offer| %>
            <%cont1 = cont1 + 1%>
            <% if cont1 == 4 %>  <%break%>  <% end %>
            <div class = "caja-monument">
              <h4> Excursion: <%= offer.excursion.name %> </h4>
              <% cont = 0 %>
              <% offer.excursion.monuments.each do |monument| %>
                <div class = "monument_img"><%=image_tag(monument.image)%></div>
                  <%cont = cont + 1%>
                  <% if cont == 1 %>  <%break%>  <% end %>
              <% end %>
              <li> Language: <%= offer.language %> </li>
              <li> Date: <%= offer.date %> </li>
              <li> Available: <%= offer.available %> </li>
              <%= link_to("Reservar", "", class: "button-exc, button-reservar")%>
            </div>  
          <% end %>
       
        <% end %>
   
      </div>    
    </div>    
  </div>
<% end %>


