<div class = "user-session text-color">
    <div> <%= @guide.name %> </div>

    <%= form_for([@user, @offer], method: "post") do |f|%>
            
        <div class="name-container">
            <%= f.label("Excursions") %>
            <%= f.select(:excursion_id, @excursions) %> 
        </div>

        <div class="language-container">
            <%= f.label("Languaje") %>
            <%= f.text_field(:language) %>
        
        </div>
            
        <div class="date-container">
            <%= f.label("Date") %>
            <%= f.date_field(:date) %>    
        </div>
            
        <%= submit_tag("Create Offer!!!") %>
    <% end %>

    <%= link_to "Back", @user%> 
</div>